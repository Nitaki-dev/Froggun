<Window
    x:Class="Froggun.parametre"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Froggun"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="parametre"
    Width="400"
    Height="400"
    mc:Ignorable="d">
    <Grid>
        <Label
            Width="380"
            Height="61"
            Margin="0,10,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Content="FROGGUN"
            FontFamily="Wide Latin"
            FontSize="35"
            FontWeight="Bold" />
        <Button
            x:Name="boutonAnnuler"
            Width="98"
            Height="46"
            Margin="248,284,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Annuler" />
        <Button
            x:Name="boutnJouer"
            Width="116"
            Height="46"
            Margin="40,284,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Jouer" />
        <Label
            Margin="58,164,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Difficultés : " />
        <ComboBox
            Width="120"
            Margin="177,168,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top">
            <ComboBoxItem Content="Facile" />
            <ComboBoxItem Content="Intermediaire" />
            <ComboBoxItem Content="Difficile" />
            <ComboBoxItem Content="Expert" />
        </ComboBox>

    </Grid>
</Window>

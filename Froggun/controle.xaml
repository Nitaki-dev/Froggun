<Window
    x:Class="Froggun.controle"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Froggun"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Parametre"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>

        <Button
            x:Name="boutonChoixTouche"
            Width="118"
            Height="40"
            Margin="504,152,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="boutonChoixTouche_Click"
            Content="Choix touche" />
        <Label
            x:Name="labelChoisirSesTouches"
            Width="147"
            Height="35"
            Margin="504,77,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Choisir ses touches"
            FontSize="15"
            FontWeight="Bold" />
        <Button
            x:Name="boutonQuitter"
            Width="66"
            Height="34"
            Margin="694,359,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="boutonQuitter_Click"
            Content="Quitter" />

    </Grid>
</Window>
